def add_toppings(Aidens_info, Pizza_topping):

    
    for b in Pizza_topping:
        Aidens_info['Pizza_topping'].append(b)
  
    for a in Pizza_topping:
        
        Aidens_info['Pizza_topping'].sort()



   
